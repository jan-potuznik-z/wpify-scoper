{
  "name": "wpify/scoper",
  "description": "Composer plugin that scopes WordPress and WooCommerce dependencies for usage in WordPress plugins and themes.",
  "type": "composer-plugin",
  "autoload": {
    "psr-4": {
      "Wpify\\Scoper\\": "src/"
    }
  },
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Daniel Mejta",
      "email": "daniel@mejta.net"
    }
  ],
  "scripts": {
    "extract": "php ./scripts/extract-symbols.php"
  },
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "composer-plugin-api": "^2.1",
    "humbug/php-scoper": "0.18.3",
    "jetbrains/phpstorm-stubs": "^v2022.3",
    "woocommerce/action-scheduler": "^3.5.4"
  },
  "require-dev": {
    "composer/composer": "^2.5.5",
    "johnpbloch/wordpress": "^6.2.0",
    "wpackagist-plugin/woocommerce": "^7.6.0",
    "nikic/php-parser": "^v4.15.4",
    "yahnis-elsts/plugin-update-checker": "^v4.13"
  },
  "extra": {
    "class": "Wpify\\Scoper\\Plugin",
    "wordpress-install-dir": "sources/wordpress",
    "installer-paths": {
      "sources/plugin-{$name}/": [
        "type:wordpress-plugin"
      ],
      "sources/theme-{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "textdomain": {
      "wpify-custom-fields": "some-new-textdomain"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "johnpbloch/wordpress-core-installer": true
    }
  }
}
