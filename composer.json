{
    "name": "wpify/wordpress-scoper",
    "description": "Composer plugin that scopes WordPress and WooCommerce dependencies for usage in WordPress plugins and themes.",
    "type": "composer-plugin",
    "autoload": {
        "psr-4": {
            "WpifyScoper\\": "src/"
        }
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Daniel Mejta",
            "email": "daniel@mejta.net"
        }
    ],
    "scripts": {
        "extract": "php ./scripts/extract-symbols.php"
    },
    "minimum-stability": "stable",
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "humbug/php-scoper": "0.15.0",
        "jetbrains/phpstorm-stubs": "v2020.3",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "johnpbloch/wordpress": "^5.7",
        "wpackagist-plugin/woocommerce": "^5.1",
        "nikic/php-parser": "^4.10"
    },
    "extra": {
        "class": "WpifyScoper\\Plugin",
        "wordpress-install-dir": "sources/wordpress",
        "installer-paths": {
            "sources/plugin-{$name}/": ["type:wordpress-plugin"],
            "sources/theme-{$name}/": ["type:wordpress-theme"]
        }
    }
}
